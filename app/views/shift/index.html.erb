<h2><%= @date_range.first.strftime('%Y年%m月') %></h2>
<table border="1" style="border-collapse: collapse">
  <thead>
    <tr>
      <th>名前</th>
      <% @date_range.each do |date| %>
        <th><%= date.strftime("%d") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <% @date_range.each do |date| %>
          <td>
            <% shift = @shift[[user.id, date.to_date]]&.first %>
            <% if shift %>
              <%= "〇" %>
            <% else %>
              　　
            <% end %>
            
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <div class="chat">
    <div class="chat-message">
      チャット欄
      <% @chat.each do |e| %>
        <br>
        <%= e.add %>
        <br>
        <%= e.come %>
      <% end %>
    </div>
  </div>

</p>
