<%= form_with model: @chat do |f| %>
<head>
  <title>シフト管理</title>
  <style>
    .cell {
      position: relative;
    }
    .checkbox-group {
      display: none; /* 初期状態では非表示 */
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: white;
      padding: 5px;
      border: 1px solid #ccc;
      z-index: 10;
    }
    .cell:hover .checkbox-group {
      display: block; /* マウスオーバー時に表示 */
    }
    .checkbox-group label {
      margin-right: 10px;
    }
  </style>
</head>
<body>
  <table border="1">
    <thead>
      <tr>
        <th>日付</th>
        <% (1..30).each do |day| %>
          <th><%= day %>日</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>田中</td>
        <% (1..30).each do |day| %>
          <td class="cell">
            <div class="checkbox-group">
              <label>
                <%= f.check_box "tanaka[#{day}][]", multiple: true, value: 1 %> 1
              </label>
              <label>
                <%= f.check_box "tanaka[#{day}][]", multiple: true, value: 2 %> 2
              </label>
              <label>
                <%= f.check_box "tanaka[#{day}][]", multiple: true, value: 3 %> 3
              </label>
            </div>
          </td>
        <% end %>
      </tr>
      <tr>
        <td>佐藤</td>
        <% (1..30).each do |day| %>
          <td class="cell">
            <div class="checkbox-group">
              <label>
                <%= f.check_box "sato[#{day}][]", multiple: true, value: 1 %> 1
              </label>
              <label>
                <%= f.check_box "sato[#{day}][]", multiple: true, value: 2 %> 2
              </label>
              <label>
                <%= f.check_box "sato[#{day}][]", multiple: true, value: 3 %> 3
              </label>
            </div>
          </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</body>

<%= f.submit "送信" %>
<% end %>
