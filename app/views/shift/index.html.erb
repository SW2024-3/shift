<body>
<h2><%= @date_range.first.strftime('%Y年%m月') %></h2>
<table border="1">
  <thead>
    <tr>
      <th style="width: 100px; background-color: #dcdcdc;">名前</th>
      <% @date_range.each do |date| %>
        <th><%= date.strftime("%d") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="background-color: #dcdcdc;"><%= user.name %></td>
        <% @date_range.each do |date| %>
          <td>
            
            <% shift = @shift.find { |s| s.user_id == user.id && s.tdate.to_date == date } %>
            <% if shift %>
              <%= " 〇" %>
            <% else %>
              　<%= "　" %>　
            <% end %>
            
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="add-shift">
  <%= link_to "シフトを追加", new_shift_path %>
</div>

</body>