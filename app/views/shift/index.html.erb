<h2><%= @date_range.first.strftime('%Y年%m月') %></h2>
<table border="1">
  <thead>
    <tr>
      <th>名前</th>
      <% @date_range.each do |date| %>
        <th><%= date.strftime("%d") %></th>
      <% end %>
    </tr>
  </thead>
    <tbody>
        <% @user.each do |name| %>
        <tr>
            <td><%= name %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<p>
  <div class="chat">
    <div class="chat-message">
      チャット欄
      <% @chat.each do |e| %>
        <br>
        <%= e.add %>
        <br>
        <%= e.come %>
      <% end %>
    </div>
  </div>

</p>
